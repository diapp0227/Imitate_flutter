{
  "platforms": {
    "flutter": {
      "patterns": [
        "project/Flutter/**/*.dart"
      ],
      "language": "Dart"
    },
    "android": {
      "patterns": [
        "project/Android/app/src/main/**/*.kt",
        "project/Android/app/src/main/**/*.java"
      ],
      "language": "Kotlin/Java"
    },
    "ios": {
      "patterns": [
        "project/iOS/imitate/**/*.swift"
      ],
      "language": "Swift"
    },
    "documentation": {
      "patterns": [
        "document/**/*.md"
      ],
      "language": "Markdown"
    },
    "github": {
      "patterns": [
        ".github/**/*.yml",
        ".github/**/*.yaml",
        ".github/**/*.js",
        ".github/**/*.json"
      ],
      "language": "GitHub Actions / JavaScript / JSON"
    },
    "config": {
      "patterns": [
        ".gitignore",
        ".gitattributes",
        "*.md"
      ],
      "language": "Configuration / Documentation"
    }
  },
  "excludePatterns": [
    "**/build/**",
    "**/.idea/**",
    "**/.vscode/**",
    "**/.gradle/**",
    "**/.dart_tool/**",
    "**/*.pbxproj",
    "**/*.xcworkspacedata",
    "**/Pods/**",
    "**/node_modules/**",
    "**/*.g.dart",
    "**/*.freezed.dart"
  ],
  "reviewFocus": [
    "SQL injection risks in Repository classes",
    "MethodChannel contract consistency across platforms",
    "Null safety violations",
    "Input validation gaps",
    "Cross-platform implementation consistency",
    "Error handling patterns",
    "Unused imports and code quality",
    "Documentation accuracy"
  ]
}
